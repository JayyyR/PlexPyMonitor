<?xml version="1.0" encoding="utf-8"?>
<com.joeracosta.joe.plexpymonitor.view.UserDetailsScreen xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimaryLight"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="@dimen/user_details_padding">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:gravity="center_vertical"
            android:layout_weight="1"
            android:orientation="vertical">


            <TextView
                style="@style/UserDetailsLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/ip_address" />


            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="po"
                android:textColor="@color/textColor" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:gravity="center_vertical"
            android:layout_weight="1"
            android:orientation="vertical">


            <TextView
                style="@style/UserDetailsLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/port" />


            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="po"
                android:textColor="@color/textColor" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:gravity="center_vertical"
            android:layout_weight="1"
            android:orientation="vertical">


            <TextView
                style="@style/UserDetailsLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/auth_key" />


            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="po"
                android:textColor="@color/textColor" />

        </LinearLayout>
    </LinearLayout>

</com.joeracosta.joe.plexpymonitor.view.UserDetailsScreen>